#------------------------------------------------------------------------------
# all:
#------------------------------------------------------------------------------

all:	trains wdg minheap
	gcc $(CFLAGS) trains.o wdg.o minheap.o $(LFLAGS) -o ../bin/trains
	rm -f *.o

#------------------------------------------------------------------------------
# trains:
#------------------------------------------------------------------------------

trains:	trains.o
	gcc $(CFLAGS) -c trains.c

#------------------------------------------------------------------------------
# wdg:
#------------------------------------------------------------------------------

wdg:	wdg.o
	gcc $(CFLAGS) -c wdg.c

#------------------------------------------------------------------------------
# minheap:
#------------------------------------------------------------------------------

minheap:	minheap.o
	gcc $(CFLAGS) -c minheap.c

#------------------------------------------------------------------------------
# clean:
#------------------------------------------------------------------------------

clean:
	rm -f *.o
	rm -f ../bin/trains
